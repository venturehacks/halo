    "@typescript-eslint/parser": "3.10.1",
    "acorn": "6.0.5",
    "auto-changelog": "^1.16.0",
    "babel-jest": "26.1.0",
    "babel-plugin-emotion": "^10.0.4",
    "babel-preset-gatsby": "^0.2.29",
    "chokidar-cli": "^1.2.2",
    "classnames": "^2.2.6",
    "concurrently": "^4.1.2",
    "cross-env": "^5.2.0",
    "custom-tslint-formatters": "^2.4.0",
    "docz": "next",
    "enzyme": "^3.11.0",
    "@wojtekmaj/enzyme-adapter-react-17": "0.6.3",
    "enzyme-to-json": "^3.4.4",
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-angellist": "git+https://github.com/venturehacks/eslint-config-angellist#0.4.4",

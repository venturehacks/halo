    "gatsby-alias-imports": "^1.0.4",
    "gatsby-plugin-sass": "^2.1.28",
    "husky": "^3.0.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "26.1.0",
    "jest-runner-eslint": "^0.9.0",
    "jest-runner-prettier": "0.3.6",
    "jest-runner-stylelint": "2.3.3",
    "jscodeshift": "^0.6.4",
    "lint-staged": "^9.3.0",
    "lodash": "^4.17.15",
    "next": "11.1.0",
    "node-sass": "4.14.1",
    "prettier": "^1.19.1",
    "prop-types": "^15.6.2",
    "react": "17.0.2",
    "react-copy-to-clipboard": "^5.0.2",
    "react-dom": "17.0.2",
    "react-test-renderer": "^16.8.6",

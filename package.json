{
  "name": "halo",
  "version": "0.9.12",
  "displayName": "Halo Design System",
  "description": "Next-generation design system for AngelList and beyond.",
  "author": "Drew Lustro <drew@angel.co>",
  "license": "UNLICENSED",
  "main": "dist/halo.js",
  "module": "dist/halo.module.js",
  "style": "dist/halo.css",
  "types": "dist/typings/index.d.ts",
  "scripts": {
    "prepublishOnly": "yarn run prepublish:clean && yarn run prepublish:duplicate-package && yarn run prepublish:slim-package && yarn run prepublish:override-root-package",
    "prepublish:clean": "rimraf package.original.json package.slim.json",
    "prepublish:duplicate-package": "cp package.json package.original.json",
    "prepublish:slim-package": "cat package.original.json | jq '(.devDependencies | to_entries | map(select(.key | test(\"gatsby|webpack|docz\") | not)) | from_entries) as $x | .devDependencies=$x | .' > package.slim.json",
    "prepublish:override-root-package": "cp -f package.slim.json package.json",
    "postpublish": "rimraf package.original.json package.slim.json && git checkout -- package.json",
    "clean": "rimraf ./dist/* && rimraf ./.rpt2_cache && gatsby clean",
    "build": "yarn build:node",
    "build:node": "tsc && rollup -c rollup.config.babel.js",
    "build:gatsby": "gatsby build",
    "changelog": "npx auto-changelog --package --commit-limit false  --template ./tools/changelog.compact.hbs",
    "dev": "gatsby develop",
    "serve": "gatsby serve",
    "watch": "concurrently --kill-others --kill-others-on-fail --names \"HALO:BUILD\" --prefix-colors \"bgMagenta.bold\" --timestamp-format \"YYYY-MM-DD HH:MM\" \"yarn:watch:build\"",
    "watch:build": "chokidar \"src/**/*.{ts,tsx,scss}\" --command \"yarn build\"",
    "test": "NODE_ENV=test BABEL_ENV=test jest --config jest.config.js --maxWorkers=16",
    "test:dev": "yarn run test:clean && NODE_ENV=test BABEL_ENV=test jest --forceExit --detectOpenHandles --config jest.dev.js",
    "test:dev:watch": "yarn run test:dev --watch --onlyChanged",
    "test:clean": "rimraf ./node_modules/.cache/ && rimraf ./.rpt2_cache && jest --clearCache",
    "test:ci": "NODE_ENV=test BABEL_ENV=test jest --config jest.config.js --runInBand",
    "docs:build": "yarn build:gatsby",
    "prettier:other:write": "prettier --write '**/*.{md,markdown}'",
    "prettier:other": "prettier '**/*.{md,markdown}' --list-different",
    "prettier:scripts:write": "prettier --write '**/*.{js,jsx,ts,tsx}'",
    "prettier:scripts": "prettier '**/*.{js,jsx,ts,tsx}' --list-different",
    "prettier:styles:write": "stylelint '**/*.scss' --fix && prettier --write '**/*.{css,scss}'",
    "prettier:styles": "stylelint '**/*.scss' && prettier '**/*.{css,scss}' --list-different",
    "prettier:write": "yarn run prettier:scripts:write && yarn run prettier:styles:write && yarn run prettier:other:write",
    "prettier": "yarn run prettier:scripts && yarn run prettier:styles && yarn run prettier:other",
    "release": "release-it",
    "eslint": "eslint '**/*.ts*' --format codeframe",
    "eslint:fix": "eslint '**/*.ts*' --format codeframe --fix",
    "tslint:fix": "tslint --fix --project . -t grouped -s node_modules/custom-tslint-formatters/formatters",
    "tslint:vscode": "tslint --project . -t vscode -s node_modules/custom-tslint-formatters/formatters",
    "tslint": "tslint --project . -t grouped -s node_modules/custom-tslint-formatters/formatters",
    "release-major": "release-it major",
    "release-minor": "release-it minor",
    "release-patch": "release-it patch",
    "typesync": "typesync"
  },
  "github": {
    "release": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/venturehacks/halo.git"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/node": "^7.2.0",
    "@babel/plugin-proposal-optional-chaining": "^7.7.5",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-react": "^7.0.0",
    "@emotion/core": "^10.0.14",
    "@emotion/styled": "^10.0.14",
    "@theme-ui/typography": "^0.3.0",
    "@types/acorn": "4.0.5",

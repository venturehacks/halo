{
  "name": "halo-monorepo",
  "version": "0.15.2",
  "private": true,
  "displayName": "Halo Design System Monorepo",
  "description": "Monorepo containing Halo module sources and documentation site.",
  "author": "Drew Lustro <drew@angel.co>",
  "license": "UNLICENSED",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "changelog": "auto-changelog --commit-limit false --template ./tools/changelog.compact.hbs",
    "build": "yarn workspace halo build",
    "size:report": "yarn workspace halo build && yarn workspace halo size:json && yarn ts-node bin/ci/datadog-size-limit.ts",
    "build:docs": "yarn workspace docs build",
    "clean": "yarn workspace halo clean && yarn workspace docs clean",
    "dev": "yarn workspace docs dev",
    "test": "yarn workspace halo test",
    "test:ci": "yarn workspace halo test:ci",
    "prettier:fix": "stylelint '**/*.scss' && prettier --write '**/*.{ts,tsx,js,jsx,css,scss,md,markdown}'",
    "lint": "tslint -t grouped && eslint '**/*.ts*' --format codeframe",
    "lint:fix": "tslint --fix -t grouped && eslint '**/*.ts*' --format codeframe --fix",
    "release": "release-it --npm.publishArgs=\"--registry=https://npm.fury.io/angellist/\" --disable-metrics",
    "release:major": "yarn release --increment=major",
    "release:minor": "yarn release --increment=minor",
    "release:patch": "yarn release --increment=patch",
    "typesync": "typesync"
  },
  "npm": {
    "//": "Monorepo root package. Do not publish to npm/gemfury!",
    "publish": false
  },
  "publishConfig": {
    "registry": "https://npm.fury.io/angellist/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/venturehacks/halo.git"
  },

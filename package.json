  },
  "dependencies": {
    "@tippy.js/react": "^2.2.3",
    "camelcase": "^5.3.1",
    "react-spinners": "^0.6.1"
  },
  "peerDependencies": {
    "classnames": "^2.2.6",
    "lodash": "^4.17.11",
    "react": ">= 17.0.0",
    "react-dom": ">= 17.0.0",
    "react-modal": "^3.11.1"
  },
  "resolutions": {
    "get-caller-file": "1.0.3",
    "node-sass": "4.14.1",
    "**/node-sass": "4.14.1",
    "chokidar": "3.4.2",
    "**/chokidar": "3.4.2",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "engines": {
    "node": ">= 8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,graphql,md,markdown}": [
      "prettier --config ./.prettierrc.js --ignore-path ./.prettierignore --write",
      "git add"
    ],
    "**/!(*scss.d).{ts,tsx}": [
      "prettier --config ./.prettierrc.js --ignore-path ./.prettierignore --write",
      "tslint --fix",
      "git add"
    ],
    "**/*.{css,scss}": [
      "prettier --config ./.prettierrc.js --ignore-path ./.prettierignore --write",
      "stylelint --fix",
      "git add"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 Chrome major versions",
    "last 2 Firefox major versions",
    "last 2 Edge major versions",
    "last 2 Safari major versions",
    "ie 11",
    "last 3 Android major versions",
    "last 3 ChromeAndroid major versions",
    "last 2 iOS major versions"
  ]

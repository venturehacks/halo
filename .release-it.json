{
  "scripts": {
    "beforeStart": "yarn test",
    "beforeStage": "yarn build",
    "changelog": "git log --pretty=format:\"* %s (%h)\" [REV_RANGE]",
    "afterRelease": "echo Successfully released ${name} v${version} to ${repo.repository}."
  },
  "src": {
    "tagName": "v${version}"
  },
  "github": {
    "release": true,
    "tokenRef": "RELEASE_IT_GITHUB_TOKEN",
    "commitArgs": "-S"
  },
  "npm": {
    "publish": false,
    "private": true
  }
}

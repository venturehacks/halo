{
  "extends": "../../tsconfig.base.json",
  "compileOnSave": false,
  "compilerOptions": {
    "declarationDir": "./dist/typings/",
    "rootDir": "./src",
    "outDir": "./dist",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types",
    ],
  },
  "include": [
    "*.js",
    "src/**/*.tsx",
    "src/**/*.ts",
  ],
}

{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "dist/typings",
    // TREE-SHAKING
    // https://github.com/rollup/plugins/issues/247#issuecomment-663230846
    // "outDir": "dist/esm",
    // "composite": true,
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    "typeRoots": [
      "../../node_modules/@types",
      "node_modules/@types",
      "src/types",
    ],
  },
  "include": [
    "*.js",
    "src/**/*.tsx",
    "src/**/*.ts",
  ],
  "exclude": [
    "jest.config.js",
    "jest.dev.js",
    "**/__tests__/**/*",
    "node_modules/**/*",
    ".rollup.cache",
    "dist",
    ".docz/**/*",
    ".cache/**/*",
    "public/**/*",
    "src/gatsby-theme-docz/**/*",
  ]
}

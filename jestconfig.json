{
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "verbose": true,
  "globals": {
    "__DEV__": true,
    "__PROD__": false
  },
  "moduleDirectories": [
    "node_modules",
    "src"
  ],
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "moduleNameMapper": {
    "^.+\\.(css|scss)$": "identity-obj-proxy"
  },
  "setupFiles": [
    "<rootDir>/test/jest-setup.ts"
  ],
  "testPathIgnorePatterns": [
    "<rootDir>/node_modules/"
  ]
}
